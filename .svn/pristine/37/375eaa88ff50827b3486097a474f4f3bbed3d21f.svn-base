#stopwatch {
    background-color: black;
    color: white;
    padding: 0;
    margin: 0;
    background-image: url(images/133.png);
    height: 100%;
}
#wrapper {
    position: absolute;
    left: 0px;
    right: 0px;
    width: 100%;
    height: 100%;
    box-shadow: 0px 0px 20px #000 inset;
}
@media screen and (max-width: 480px)
{
	#timer {
    position: absolute;
    /* margin-top: -180px; */
   /*  padding-left : 0;
    padding-right : 0; */
    display : block;
    /* top: 60%; */
    text-align: center;
	}
}
@media screen and (min-width: 500px)
{
	#timer {
    position: absolute;
    /* margin-top: -50px; */
   /*  padding-left : 0;
    padding-right : 0; */
    display : block;
    /* top: 60%; */
    text-align: center;
	}
}

#timer img {
    display: block;
   /* margin-left: auto;
    margin-right: auto */
    float: left;
    /* width: 10%; */
    width: 30px;
}
#timer img.colon{
    width: 10px;
}
#totalTime {
    color: #10efef;
    float : left;
    font-size: 13pt;
    opacity: 0.5;
    text-align: left;
    font-family: 'Helvetica';
}